<% if current_user.like?(micropost) %>
  <%= form_for(current_user.like_relationships.find_by(micropost_id: micropost.id),html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Remove the Favorites', class: 'btn btn-warning btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.like_relationships.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Favorites', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>